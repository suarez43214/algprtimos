# Función para encontrar el máximo de tres números
def max_de_tres(a, b, c):
    return max(a, b, c)

# Funciones para calcular áreas de figuras geométricas
import math

def area_cuadrado(lado):
    return lado ** 2

def area_rectangulo(base, altura):
    return base * altura

def area_circulo(radio):
    return math.pi * radio ** 2

# Función para sumar todos los números de una lista
def sumar_lista(lista):
    return sum(lista)

# Función para multiplicar todos los números de una lista
def multiplicar_lista(lista):
    resultado = 1
    for num in lista:
        resultado *= num
    return resultado

# Función para invertir una cadena
def invertir_cadena(cadena):
    return cadena[::-1]

# Función para calcular el factorial de un número
def factorial(numero):
    if numero == 0:
        return 1
    else:
        return numero * factorial(numero - 1)

# Función para comprobar si un número está en un rango dado
def en_rango(rango_inicio, numero, rango_final):
    return rango_inicio <= numero <= rango_final

# Función para calcular el número de letras mayúsculas y minúsculas en una cadena
def contar_letras(cadena):
    mayusculas = sum(1 for letra in cadena if letra.isupper())
    minusculas = sum(1 for letra in cadena if letra.islower())
    return mayusculas, minusculas

# Función para obtener elementos únicos de una lista
def elementos_unicos(lista):
    return list(set(lista))

# Función para verificar si un número es primo
def es_primo(numero):
    if numero <= 1:
        return False
    for i in range(2, int(math.sqrt(numero)) + 1):
        if numero % i == 0:
            return False
    return True

# Función para imprimir los números pares de una lista
def imprimir_pares(lista):
    for num in lista:
        if num % 2 == 0:
            print(num)

# Función para verificar si una cadena es un palíndromo
def es_palindromo(cadena):
    cadena = cadena.lower().replace(" ", "")
    return cadena == cadena[::-1]

